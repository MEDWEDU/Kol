# Server
NODE_ENV=development
PORT=5000
SERVER_URL=http://localhost:5000

# Client
CLIENT_URL=http://localhost:5173

# Socket.IO
SOCKET_IO_ORIGIN=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/koltechat

# Auth
JWT_SECRET=change-me
JWT_EXPIRES_IN=7d
COOKIE_NAME=koltechat_auth
COOKIE_MAX_AGE_MS=604800000

# Web Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
PUSH_CONTACT_EMAIL=mailto:admin@example.com

# Uploads / Cloudinary (optional)
UPLOAD_DIR=uploads
USE_CLOUDINARY=false
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
